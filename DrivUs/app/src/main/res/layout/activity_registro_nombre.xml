<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro_Nombre"
    android:background="@color/background_drivus_home">

    <TextView
        android:id="@+id/textView_registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Registro"
        android:textColor="@color/white"
        android:textSize="30dp"
        />

     <ScrollView
         android:id="@+id/scroll_login"
         android:layout_width="match_parent"
         android:layout_height="600dp"
         android:layout_below="@+id/textView_registro">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">

             <com.google.android.material.textfield.TextInputLayout
                 style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                 android:id="@+id/editUsername"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="30dp"
                 android:layout_marginRight="30dp"
                 android:layout_marginBottom="20dp"
                 app:startIconDrawable="@drawable/ic_account_edittext"
                 app:startIconTint="@color/white"
                 app:endIconMode="clear_text"
                 app:endIconTint="@color/white"
                 app:helperText="*Requerido"
                 app:helperTextTextColor="@color/white"
                 android:hint="Nombre(s)"
                 android:textColorHint="@color/white"
                 app:hintTextColor="@color/white"
                 app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color">

                 <com.google.android.material.textfield.TextInputEditText
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:inputType="text"
                     android:textColor="@color/white"
                     android:textCursorDrawable="@null"/>

             </com.google.android.material.textfield.TextInputLayout>

             <com.google.android.material.textfield.TextInputLayout
                 style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                 android:id="@+id/editUserApellidoP"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="30dp"
                 android:layout_marginRight="30dp"
                 android:layout_marginBottom="20dp"
                 app:startIconDrawable="@drawable/ic_account_edittext"
                 app:startIconTint="@color/white"
                 app:endIconMode="clear_text"
                 app:endIconTint="@color/white"
                 app:helperText="*Requerido"
                 app:helperTextTextColor="@color/white"
                 android:hint="Apellido Paterno"
                 android:textColorHint="@color/white"
                 app:hintTextColor="@color/white"
                 app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
                 android:layout_below="@id/editUsername">

                 <com.google.android.material.textfield.TextInputEditText
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:inputType="text"
                     android:textColor="@color/white"
                     android:textCursorDrawable="@null"/>

             </com.google.android.material.textfield.TextInputLayout>

             <com.google.android.material.textfield.TextInputLayout
                 style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                 android:id="@+id/editUserApellidoM"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="30dp"
                 android:layout_marginRight="30dp"
                 android:layout_marginBottom="20dp"
                 app:startIconDrawable="@drawable/ic_account_edittext"
                 app:startIconTint="@color/white"
                 app:endIconMode="clear_text"
                 app:endIconTint="@color/white"
                 app:helperText="*Requerido"
                 app:helperTextTextColor="@color/white"
                 android:hint="Apellido Materno"
                 android:textColorHint="@color/white"
                 app:hintTextColor="@color/white"
                 app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
                 android:layout_below="@id/editUserApellidoP">

                 <com.google.android.material.textfield.TextInputEditText
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:inputType="text"
                     android:textColor="@color/white"
                     android:textCursorDrawable="@null"/>

             </com.google.android.material.textfield.TextInputLayout>

             <com.google.android.material.textfield.TextInputLayout
                 style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                 android:id="@+id/editCalendario"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="30dp"
                 android:layout_marginRight="30dp"
                 android:layout_marginBottom="20dp"
                 app:startIconDrawable="@drawable/ic_calendar_edittext"
                 app:helperText="*Requerido"
                 app:helperTextTextColor="@color/white"
                 app:startIconTint="@color/white"
                 android:hint="Fecha de Nacimiento"
                 android:textColorHint="@color/white"
                 app:hintTextColor="@color/white"
                 app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
                 android:layout_below="@id/editUserApellidoM">

                 <com.google.android.material.textfield.TextInputEditText
                     android:id="@+id/editCalendario_calendario"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:inputType="text"
                     android:textColor="@color/white"
                     android:textCursorDrawable="@null"
                     android:focusable="false"
                     android:clickable="true"
                     />

             </com.google.android.material.textfield.TextInputLayout>
             <LinearLayout
                 android:id="@+id/linearLayout_Direccion"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="30dp"
                 android:layout_marginRight="30dp"
                 android:layout_marginBottom="20dp"
                 android:layout_below="@id/editCalendario"
                 android:orientation="horizontal">

                 <com.google.android.material.textfield.TextInputLayout
                     style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                     android:id="@+id/editCalle"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     app:startIconDrawable="@drawable/ic_location_edittext"
                     app:helperTextTextColor="@color/white"
                     app:helperText="*Requerido"
                     app:startIconTint="@color/white"
                     android:hint="Calle"
                     android:layout_below="@id/editUsername"
                     app:endIconMode="clear_text"
                     app:endIconTint="@color/white"
                     android:textColorHint="@color/white"
                     app:hintTextColor="@color/white"
                     app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
                     android:layout_weight="1">

                     <com.google.android.material.textfield.TextInputEditText
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:inputType="text"
                         android:textColor="@color/white"
                         android:textCursorDrawable="@null"/>

                 </com.google.android.material.textfield.TextInputLayout>

                 <com.google.android.material.textfield.TextInputLayout
                     style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                     android:id="@+id/editNumCasa"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     app:helperTextTextColor="@color/white"
                     app:helperText="*Requerido"
                     app:endIconMode="clear_text"
                     app:endIconTint="@color/white"
                     android:hint="Numero"
                     android:textColorHint="@color/white"
                     app:hintTextColor="@color/white"
                     app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
                     android:layout_below="@id/editUsername"
                     android:layout_weight="1.5">

                     <com.google.android.material.textfield.TextInputEditText
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:inputType="number"
                         android:textColor="@color/white"
                         android:textCursorDrawable="@null"/>

                 </com.google.android.material.textfield.TextInputLayout>
             </LinearLayout>
             <LinearLayout
                 android:id="@+id/linearLayout_Direccion_2"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="30dp"
                 android:layout_marginRight="30dp"
                 android:layout_marginBottom="20dp"
                 android:layout_below="@id/linearLayout_Direccion"
                 android:orientation="horizontal">

                 <com.google.android.material.textfield.TextInputLayout
                     style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                     android:id="@+id/editColonia"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     app:helperTextTextColor="@color/white"
                     app:helperText="*Requerido"
                     android:hint="Colonia"
                     app:endIconMode="clear_text"
                     app:endIconTint="@color/white"
                     android:textColorHint="@color/white"
                     app:hintTextColor="@color/white"
                     app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
                     android:layout_weight="1">

                     <com.google.android.material.textfield.TextInputEditText
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:inputType="text"
                         android:textColor="@color/white"
                         android:textCursorDrawable="@null"/>

                 </com.google.android.material.textfield.TextInputLayout>

                 <com.google.android.material.textfield.TextInputLayout
                     style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                     android:id="@+id/editNumCP"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     app:helperTextTextColor="@color/white"
                     app:helperText="*Requerido"
                     app:endIconMode="clear_text"
                     app:endIconTint="@color/white"
                     android:hint="CP"
                     android:textColorHint="@color/white"
                     app:counterEnabled="true"
                     app:counterMaxLength="5"
                     app:counterTextColor="@color/white"
                     app:hintTextColor="@color/white"
                     app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
                     android:layout_weight="1.5">

                     <com.google.android.material.textfield.TextInputEditText
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:inputType="number"
                         android:textColor="@color/white"
                         android:textCursorDrawable="@null"/>

                 </com.google.android.material.textfield.TextInputLayout>
             </LinearLayout>

             <com.google.android.material.textfield.TextInputLayout
                 style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                 android:id="@+id/editTelefono"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="30dp"
                 android:layout_marginRight="30dp"
                 android:layout_marginBottom="20dp"
                 app:startIconDrawable="@drawable/ic_phone_edittext"
                 app:helperTextTextColor="@color/white"
                 app:helperText="*Requerido"
                 app:startIconTint="@color/white"
                 app:endIconMode="clear_text"
                 app:endIconTint="@color/white"
                 android:hint="Telefono"
                 android:textColorHint="@color/white"
                 app:counterEnabled="true"
                 app:counterTextColor="@color/white"
                 app:counterMaxLength="10"
                 app:prefixText="+52  "
                 app:prefixTextColor="@color/white"
                 app:hintTextColor="@color/white"
                 app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
                 android:layout_below="@+id/linearLayout_Direccion_2">

                 <com.google.android.material.textfield.TextInputEditText
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:inputType="number"
                     android:textColor="@color/white"
                     android:textCursorDrawable="@null"/>

             </com.google.android.material.textfield.TextInputLayout>
             <TextView
                 android:id="@+id/txt_genero"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/white"
                 android:text="Genero"
                 android:layout_marginLeft="30dp"
                 android:layout_marginRight="30dp"
                 android:layout_below="@id/editTelefono"/>

             <RadioGroup
                 android:id="@+id/radioButton_genero"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="30dp"
                 android:layout_marginRight="30dp"
                 android:layout_marginBottom="15dp"
                 android:layout_below="@id/txt_genero"
                 android:orientation="horizontal">
                 <RadioButton
                     android:id="@+id/rbmujer"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textColor="@color/white"
                     android:text="Mujer"
                     android:layout_weight="2"/>
                 <RadioButton
                     android:id="@+id/rbhombre"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textColor="@color/white"
                     android:text="Hombre"
                     android:layout_weight="2"/>
             </RadioGroup>
         </LinearLayout>
     </ScrollView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scroll_login"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="30dp"
        app:backgroundTint="@null"
        android:background="@drawable/background_button_login_signup"
        android:text="Siguiente"
        android:textColor="@color/white" />
</RelativeLayout>